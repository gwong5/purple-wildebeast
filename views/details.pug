extends header

block content
  body
    for info in book
      img(src= info.image onError="this.src='not_found.png'")
      .details
        #editable= info.author
        #editable= info.title
        #editable= info.genre
        #editable= info.description
      form(method="post" action=`/deleteBook/${info.id}`) 
        button(type="submit") Delete
      form(method="put" action=`/updateBook/${info.id}`)
        button(type="submit") Edit