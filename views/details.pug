extends header

block content
  body
    for info in book
      img(src= info.image)
        .details
          .author()= info.author
          .title()= info.title
          .genre()= info.genre
          .description()= info.description
    form(method="post" action=`/deleteBook/${info.id}`) 
      button(type="submit") Delete
    form(method="put" action=`/updateBook/${info.id}`)
      button(type="submit") Edit